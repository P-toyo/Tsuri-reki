<div class="container my-4">
  <div class="row">
    <div class="col-4">
      <h2><%= link_to "つりれき", root_path %></h2>
    </div>
    <div class="col-8">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <%= link_to "使い方", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
