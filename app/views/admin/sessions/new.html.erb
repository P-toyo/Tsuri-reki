<div class="col-2 border"></div>
<div class="col-8 border px-5">
  <h2 class="text-center my-4">ログイン(管理者用)</h2>
  <%= form_with model: @admin, url: admin_session_path, id: "new_admin", class: "new_admin" do |f| %>
    <table class="table table-borderless">
      <tr>
        <th class="text-center" style="width: 200px">メールアドレス</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %></td>
      </tr>
      <tr>
        <th class="text-center" style="width: 200px">パスワード</th>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.check_box :remember_me %>　記憶する</td>
      </tr>
    </table>
    <div class="text-center my-4"><%= f.submit "ログイン", class: "btn btn-success w-50" %></div>
  <% end %>
</div>
<div class="col-2 border"></div>
