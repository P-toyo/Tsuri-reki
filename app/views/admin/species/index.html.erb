<div class="col-2"></div>

<div class="col-8">
  <h4 class="text-center">魚種一覧・編集</h4>
  <% @species.each do |species| %>
    <div><%= species.name %> <%= link_to "削除", admin_species_path(species), method: :delete, "data-confirm" => "本当に削除しますか？" %></div>
  <% end %>
  <%= form_with model: @new_species, url: admin_species_index_path, class: "d-flex align-items-center", method: :post do |f| %>
    <%= f.text_field :name %>
    <%= f.submit "追加", class: "btn btn-success btn-sm" %>
  <% end %>

</div>