<canvas id="Chart"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
var ctx = document.getElementById('Chart');
var myChart = new Chart(ctx, {
  type: 'bar',
  data: {
    labels: <%= raw(species_name) %>,
    datasets: [{
      label: 'このエリアの釣果',
      data: <%= raw(catch_number) %>,
      borderWidth: 1
    }]
  },

  options: {
    scale: {
      ticks: {
        precision: 0
      }
    }
  }
});



</script>