<%= render "layouts/sidebar_left" %>

<div class="col-8">
  <h2 class="text-center">新規投稿</h2>
  <h4 class="text-center">都道府県を選択してください</h4>
  <div class="row">
    <% @prefectures.each do |prefecture| %>
      <div class="col-2 border p-0">
        <div>
          <div class="card text-center m-0">
            <%= image_tag prefecture.get_post_image %>
            <div class="card-body m-auto p-0">
              <p class="card-title m-auto font-weight-bold text-center">
                <%= link_to "#{prefecture.name}", post_new_path(prefecture.id) %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "layouts/sidebar_right" %>