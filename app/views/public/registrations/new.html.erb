<%= render "public/posts/sidebar_left" %>
<div class="col-8 border">
  <%= form_with model: @user, url: user_registration_path, id: "new_user", class: "new_user" do |f| %>
    <h2 class="text-center my-4">新規登録</h2>
    <table class="table table-borderless">
      <tr>
        <th class="text-center" style="width: 200px">ハンドルネーム</th>
        <td><%= f.text_field :name, autofocus: true, class: "w-100"  %></td>
      </tr>
      <tr>
        <th class="text-center">メールアドレス</th>
        <td><%= f.email_field :email, autocomplete: "email", class: "w-100"  %></td>
      </tr>
      <tr>
        <th class="text-center">パスワード(6文字以上)</th>
        <td><%= f.password_field :password, autocomplete: "new-password", class: "w-100"  %></td>
      </tr>
      <tr>
        <th class="text-center">パスワード(確認用)</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %></td>
      </tr>
      <tr>
        <th class="text-center">主な活動拠点</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %></td>
      </tr>
    </table>
    <div class="text-center my-4"><%= f.submit "新規登録", class: "btn btn-success w-50" %></div>
  <% end %>
</div>
<%= render "public/posts/sidebar_right" %>