<!-- ヘッダー -->
<header class="bg-dark py-4">
  <div class="container px-4 px-lg-5">
    <div class="text-center text-white">
      <h2 class="fw-bolder">パスワードをお忘れですか？</h2>
    </div>
  </div>
</header>
<!-- パスワード再設定用メール発行フォーム -->
<section class="bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3 mb-5 mb-lg-0">
        <!-- 入力フォーム -->
        <div class="card card-container my-5">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "m-5",method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <!-- 新しいパスワードの入力部 -->
            <%= f.label :email, "メールアドレス", class: "m-0 text-dark" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
            <!-- パスワード変更ボタン -->
            <%= f.submit "パスワード再設定メールを送る", class: "btn btn-lg btn-outline-dark btn-block mb-2" %>
            <!-- ログインページへのリンク -->
            <div><%= link_to "ログインはこちら", new_user_session_path, class: "text-dark" %></div>
            <!-- 新規会員登録ページへのリンク -->
            <div><%= link_to "まだ会員登録がお済みで無い方はこちら", new_user_registration_path, class: "text-dark" %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="container mt-5">
  <h2>パスワードをお忘れですか？</h2>
  <div class="row">
    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "パスワード再設定メールを送る", class:"btn btn-outline-primary" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>